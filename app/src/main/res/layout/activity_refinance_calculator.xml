<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_loan_balance_tv"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_current_loan_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/current_loan_balance_et" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_interest_rate_tv"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_current_interest_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/current_interest_rate_et" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_loan_term_tv"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_current_loan_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/current_loan_term_et" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_interest_rate_tv"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_new_interest_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/new_interest_rate_et" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_loan_term_tv"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_new_loan_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/new_loan_term_et" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/closing_costs_tv"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_closing_costs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="@string/closing_costs_et" />

        <Button
            android:id="@+id/btn_calculate_refinance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/calculate_refinance_savings_btn" />

        <TextView
            android:id="@+id/tv_monthly_savings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/design_default_color_primary"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_break_even_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/design_default_color_primary"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>
